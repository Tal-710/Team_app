<resources>
    <!-- Base application theme. -->
    <style name="Theme.Team_app" parent="Theme.Material3.DayNight.NoActionBar">
        <!--this is dark theme file,add here styles that you want to be in dark mode-->
        <!-- for example <item name="colorPrimary">@color/Text_Color_1</item> the color will
        the same as the one in color night-->
        <item name="android:textColor">@color/text_Color_1</item>
        <item name="android:background">@color/background_Color_Default</item>
    </style>

    <style name="Theme.Team_app.Small" parent="Theme.Team_app">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Team_app.Medium" parent="Theme.Team_app">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Team_app.Large" parent="Theme.Team_app">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Theme.Team_app.White" parent="Theme.Team_app">
        <item name="android:background">@color/background_Color_White</item>
    </style>

    <style name="Theme.Team_app.Green" parent="Theme.Team_app">
        <item name="android:background">@color/background_Color_Green</item>
    </style>

    <style name="Theme.Team_app.Yellow" parent="Theme.Team_app">
        <item name="android:background">@color/background_Color_Yellow</item>
    </style>

    <style name="Theme.Team_app.Red" parent="Theme.Team_app">
        <item name="android:background">@color/background_Color_Red</item>
    </style>

    <style name="Theme.Team_app.Purple" parent="Theme.Team_app">
        <item name="android:background">@color/background_Color_Purple</item>
    </style>

</resources>